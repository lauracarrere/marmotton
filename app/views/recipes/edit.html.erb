<div class="container justify-content-center w-50">
  <div class="card p-3 m-3">
    <h1 class="mt-3 mb-3 new-recipe-title">Complétez la recette de <%= @recipe.name %></h1>
      <%= simple_form_for(@recipe) do |f| %>
        <%= f.input :name %>
        <%= f.input :description, label: "Description (allongez le champ si besoin en cliquant dans l'angle en bas à droite)" %>
        <%= f.input :time, label: "Temps en minutes" %>
        <%= f.input :difficulty, collection: 1..5 %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Compléter ou modifier la recette', class: 'btn btn-dark w-100 mb-5 mt-2' %>
      <% end %>
    </div>
</div>
